<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserDashboard"
    android:orientation="vertical"
    android:background="@color/home_background">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:src="@drawable/menu_icon" />

    <ImageView
        android:background="@color/banner_background"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:padding="5dp"
        android:src="@drawable/user_profile_icon" />

  </RelativeLayout>

  <ScrollView
      android:layout_height="match_parent"
      android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

      <RelativeLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:textStyle="bold" />



      </RelativeLayout>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="#00000000"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"

          app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/sri_lanka_travelling_places">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:padding="25dp"
              android:text="@string/travel"
              android:textColor="@color/white"
              android:textSize="30sp"
              android:textStyle="bold" />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/view"
              android:layout_alignParentRight="true"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:background="#00000000"
              android:padding="20dp"
              android:layout_alignParentBottom="true"/>

        </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="#00000000"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"

          app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/hotels_resturents">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:padding="25dp"
              android:text="@string/hotel_and_restaurant"
              android:textColor="@color/white"
              android:textSize="30sp"
              android:textStyle="bold" />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/view"
              android:layout_alignParentRight="true"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:background="#00000000"
              android:padding="20dp"
              android:layout_alignParentBottom="true"/>

        </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="#00000000"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/events">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:padding="25dp"
              android:text="@string/event"
              android:textColor="@color/white"
              android:textSize="30sp"
              android:textStyle="bold" />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/view"
              android:layout_alignParentRight="true"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:background="#00000000"
              android:padding="20dp"
              android:layout_alignParentBottom="true"/>

        </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="#00000000"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/travel_review">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:padding="25dp"
              android:text="@string/travel_review"
              android:textColor="@color/white"
              android:textSize="30sp"
              android:textStyle="bold" />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/view"
              android:layout_alignParentRight="true"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:background="#00000000"
              android:padding="20dp"
              android:layout_alignParentBottom="true"/>

        </RelativeLayout>

      </androidx.cardview.widget.CardView>

    </LinearLayout>

  </ScrollView>


  </androidx.appcompat.widget.LinearLayoutCompat>